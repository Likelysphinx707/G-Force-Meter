<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CircleView Container -->
    <FrameLayout
        android:id="@+id/circleContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_weight="1">

        <!-- Dynamically Generated CircleView -->
        <!-- (This should be generated programmatically in the corresponding activity) -->

        <!-- Red Dot (Dynamically generated by code) -->
    </FrameLayout>

    <!-- TextViews for G-Forces -->
    <TextView
        android:id="@+id/gCurTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/txt_default" />

    <TextView
        android:id="@+id/gMinTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/txt_default" />

    <TextView
        android:id="@+id/gMaxTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/txt_default" />

    <!-- Acceleration TextView -->
    <TextView
        android:id="@+id/tvAcceleration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circleContainer"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Acceleration: 0.00"
        android:textSize="12sp" />

    <!-- Right Force TextView -->
    <TextView
        android:id="@+id/tvRightForce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:text="Right Force: 0.00"
        android:textSize="12sp" />

    <!-- Braking TextView -->
    <TextView
        android:id="@+id/tvBraking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAcceleration"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Braking: 0.00"
        android:textSize="12sp" />

    <!-- Left Force TextView -->
    <TextView
        android:id="@+id/tvLeftForce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:text="Left Force: 0.00"
        android:textSize="12sp" />

    <!-- Buttons -->

    <!-- Calibrate Button -->
    <Button
        android:id="@+id/CalibrateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBraking"
        android:layout_marginTop="16dp"
        android:text="Calibrate" />

    <!-- Exit Button -->
    <Button
        android:id="@+id/ExitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBraking"
        android:layout_marginTop="-414dp"
        android:text="Exit" />

</RelativeLayout>
